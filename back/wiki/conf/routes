# Routes

GET     /                               controllers.ApplicationController.index

GET     /articles                       controllers.ArticleController.findAll
GET     /articles/:id                   controllers.ArticleController.find(id: Long)
GET     /articles/bycategory/:id        controllers.ArticleController.findByCategory(id: Long)
POST    /articles                       controllers.ArticleController.create
PUT     /articles                       controllers.ArticleController.update
DELETE  /articles/:id                   controllers.ArticleController.delete(id: Long)

GET     /categories                     controllers.CategoryController.findAll
GET     /categories/:id                 controllers.CategoryController.find(id: Long)
POST    /categories                     controllers.CategoryController.create
PUT     /categories                     controllers.CategoryController.update
DELETE  /categories/:id                 controllers.CategoryController.delete(id: Long)